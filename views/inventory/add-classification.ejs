<h1>Add Classification</h1>
<% if (message) { %><p class="flash"><%= message %></p><% } %>
<% if (errors) { errors.forEach(e=>{ %><p class="error"><%= e.msg %></p><% }) } %>
<form method="POST" action="/inv/classification/add" novalidate>
  <label for="classification_name">Name (no spaces or special chars):</label>
  <input name="classification_name" id="classification_name" required pattern="[A-Za-z0-9]+">
  <button type="submit">Add Classification</button>
</form>
